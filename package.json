{
  "name": "ts-api",
  "version": "0.0.1",
  "description": "Comprehensive REST API Boilerplate leveraging the power of TypeScript and Fastify",
  "author": {
    "name": "Icaro Silva",
    "email": "ikaromarlon@gmail.com"
  },
  "license": "UNLICENSED",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon",
    "test": "jest --no-cache --runInBand",
    "test:unit": "jest --no-cache --runInBand --config tests/jest.config.unit.ts",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "lint:staged": "lint-staged",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "docker": "docker compose down && docker compose up",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^5.9.1",
    "fastify": "^4.26.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "prisma": "^5.9.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
